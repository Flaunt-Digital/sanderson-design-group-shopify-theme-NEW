<div id="price-settings" class="price-settings">
    <div class ="header-container">
        <div class="close-settings">
            <a id="hide-price-settings"><i class="fa fa-times"></i></a>
        </div>
        <div class="settings-header">
            <h4><i class="fa fa-cog"></i> Price Settings</h4>
        </div>
    </div>
    <div class="content-container">
        <div class="settings-form">
            <form id="customer_metafields_b2b_price_multiplier_form" data-price-toggle="{{ customer.metafields.b2b.price_toggle }}" data-price-multiplier="{{ customer.metafields.b2b.price_multiplier }}">  
                <input type="hidden" name="customer[id]" value="{{ customer.id }}" />
                <div class="settings-section price-toggle">
                    <h4>Price Toggle:</h4>
                    <input type="radio" name="metafield[b2b.price_toggle]" value="On" {% if customer.metafields.b2b.price_toggle == "On" %} checked {% endif %}/> On
                    <input type="radio" name="metafield[b2b.price_toggle]" value="Off" {% if customer.metafields.b2b.price_toggle == "Off" %} checked {% endif %}/> Off
                </div>
                <div class="settings-section price-multiplier">
                    <h4>Price Multiplier:</h4>
                    <input id="price-multiplier" class="ignore-js" type="number" name="metafield[b2b.price_multiplier]" {% if customer.metafields.b2b.price_multiplier %}value="{{ customer.metafields.b2b.price_multiplier }}"{% else %}value="1"{% endif %} min="1" step="0.1" placeholder="Price Multiplier" /> 
                    <div class="price-example">
                        {% assign example_price = 1000 %}
                        {% assign multiplier_price = example_price | times: customer.metafields.b2b.price_multiplier | round: 2 %}
                        <h4>Example:</h4>
                        <p>Original Price: {{ example_price | money }}</p>
                        <p>Multiplier Price: <span class="pricing" style="display: block!important;" data-price="{{ example_price }}">{{ multiplier_price | money }}</span></p>
                    </div>
                </div>
                <div class="settings-section buttons">
                    <div class="section-wrapper">
                        <input id="reset-price-settings" type="submit" class="button" value="Reset Settings">
                        <input id="save-price-settings" type="submit" class="button" value="Save Settings">
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
<script src="{{ 'price-settings.js' | asset_url }}" defer="defer"></script>